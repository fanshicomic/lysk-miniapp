.btn {
  position: relative;
  padding: 1.5rem 3rem;
  font-size: 1.1rem;
  font-weight: 600;
  color: #fff;
  background: none;
  border: none;
  cursor: pointer;
  overflow: hidden;
  transition: all 0.4s ease;
  border-radius: 30px;
}

.hologram {
  border: 1px solid rgba(106, 216, 255, 0.5);
  background: rgba(12, 65, 207, 0.15);
  box-shadow: 0 0 15px rgba(0, 120, 255, 0.3);
  backdrop-filter: blur(5px);
}

.hologram-text {
  font-size: 30px;
  position: relative;
  display: inline-block;
  text-shadow: 0 0 8px rgba(0, 169, 255, 0.5);
}

.hologram-text::before,
.hologram-text::after {
  content: attr(data-text);
  position: absolute;
  left: 0;
  opacity: 0;
  filter: blur(1px);
  transition: all 0.3s ease;
}

.hologram-text::before {
  top: -2px;
  color: #ee00ff;
  transform: translateX(0);
  animation: glitch 2s infinite;
}

.hologram-text::after {
  bottom: -2px;
  color: #00ffb2;
  transform: translateX(0);
  animation: glitch 2s infinite reverse;
}

.scan-line {
  position: absolute;
  width: 100%;
  height: 2px;
  background: linear-gradient(
    to right,
    transparent,
    rgba(0, 169, 255, 0.5),
    transparent
  );
  top: 0;
  animation: scan 2s linear infinite;
  filter: blur(1px);
}

@keyframes glitch {
  0%,
  100% {
    transform: translateX(0);
    opacity: 0.3;
  }
  20% {
    transform: translateX(-5px);
    opacity: 0.5;
  }
  40% {
    transform: translateX(5px);
    opacity: 0.7;
  }
  60% {
    transform: translateX(-3px);
    opacity: 0.5;
  }
  80% {
    transform: translateX(3px);
    opacity: 0.3;
  }
}

@keyframes scan {
  0% {
    top: -10%;
  }
  100% {
    top: 110%;
  }
}

