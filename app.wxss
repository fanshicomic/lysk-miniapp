.hologram {
    border: 1px solid rgba(106, 216, 255, 0.5);
    background: rgba(12, 65, 207, 0.15);
    box-shadow: 0 0 15px rgba(0, 120, 255, 0.3);
    backdrop-filter: blur(5px);
}

.hologram-text  {
    font-size: 30px;
    position: relative;
    display: inline-block;
    text-shadow: 0 0 8px rgba(0, 169, 255, 0.5);
}

.hologram-text::before,
.hologram-text::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    opacity: 0;
    filter: blur(1px);
    transition: all 0.3s ease;
}

.hologram-text::before {
    top: -2px;
    color: #ee00ff;
    transform: translateX(0);
    animation: glitch 2s infinite;
}

.hologram-text::after {
    bottom: -2px;
    color: #00ffb2;
    transform: translateX(0);
    animation: glitch 2s infinite reverse;
}

.scan-line {
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(
            to right,
            transparent,
            rgba(0, 169, 255, 0.5),
            transparent
    );
    top: 0;
    animation: scan 2s linear infinite;
    filter: blur(1px);
}

@keyframes glitch {
    0%, 100% { transform: translateX(0); opacity: 0.3; }
    20% { transform: translateX(-5px); opacity: 0.5; }
    40% { transform: translateX(5px); opacity: 0.7; }
    60% { transform: translateX(-3px); opacity: 0.5; }
    80% { transform: translateX(3px); opacity: 0.3; }
}

@keyframes scan {
    0% { top: -10%; }
    100% { top: 110%; }
}
  
/* common */
.main-content {
    flex: 1 0 auto;
    position: fixed;
    height: 100vh;
    width: 100vw;
    align-items: center;
}

.content-wrapper {
    width: 60vw;
    max-width: 300px;
    min-width: 250px;
    margin: 0 auto
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: rgba(50, 39, 68, 0.4);
    color: white;
    text-align: right;
    font-size: 12px;
    z-index: 100;
    display: flex;
    align-items: center;
    padding: 0;
    flex-direction: column;
    justify-content: center;
    height: 40px;
    backdrop-filter: blur(20px);
}

.back-button {
    margin-top: 3vh;
    margin-left: 3vh;
    margin-bottom: 20px;
    background-color: rgba(255, 255, 255, 0.1);
    height: 40px;
    width: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.back-icon {
    width: 20px;
}

.toast {
    max-width: 300px;
    min-width: 250px;
    position: absolute;
    top: 350px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(30px);
    -webkit-backdrop-filter: blur(30px);
    color: white;
    width: 60vw;
    border-radius: 20px;
    border: 0;
    font-size: medium;
}

.toast-body {
    max-height: 50vh;
    overflow: scroll;
    scrollbar-width: none;
    padding: 15px;
}

.toast.announcement {
    top: 20vh;
    width: 80vw;
    max-width: 350px;
}

.announcement-text {
    margin-bottom: 20px;
}

.toast-header {
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    color: white;
    background: rgba(255, 255, 255, 0.1);
    padding: 15px;
}

.btn-close {
    filter: invert(1) grayscale(1) brightness(2);
}

.display-row {
    display: flex;
    gap: 16px; /* 可选，增加间距 */
    align-items: center; /* 可选，垂直居中 */
    margin-bottom: 10px;
}

.form-control {
    text-align: center;
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    color: rgba(255, 255, 255, 0.6);
}
  