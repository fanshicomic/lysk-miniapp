.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #23314cc4;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  /* background-color: rgba(106, 216, 255, 0.3); */
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 10px;
}

.tab-bar-item image {
  width: 27px;
  height: 27px;
  margin-bottom: 3px;
}

.tab-bar-item view {
  font-size: 16px;
}