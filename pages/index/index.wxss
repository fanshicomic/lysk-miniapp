/**index.wxss**/

.content-wrapper {
  width: 60vw;
  max-width: 300px;
  min-width: 250px;
  margin: 0 auto;
}

#hr-section {
  text-align: right;
}

#title {
  text-align: center;
  color: white;
  margin-top: 15vh;
  font-size: 30px;
  padding: 10px;
}

#sub-title {
  width: 100%;
  color: white;
  font-size: x-small;
  opacity: 0.25;
}

.button-section {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5vh;
  width: 100%;
}

.btn {
  height: 8vh;
  width: 100%;
}

.hologram-text {
  top: 20%;
}

.hologram-orbit {
  right: -65%;
}

.hologram-championships {
  right: -55%;
}

.hologram-my-page {
  right: -55%;
}

.icon {
  width: 42%;
  position: absolute;
  left: 7%;
  top: 5%;
  opacity: 0.8;
}

.announcement-button {
  position: absolute;
  top: 7vh;
  left: 12vw;
  background-color: rgba(255, 255, 255, 0.1);
  height: 30px;
  width: 30px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.megaphone {
  width: 15px;
  height: 15px;
  background-image: url('data:image/svg+xml;base64,');
  background-repeat: no-repeat;
  background-size: contain;
}

/* Login Panel Styles */
.login-panel {
  width: 60vw; /* Set a specific width */
  height: 20vh;
  position: absolute;
  top: 35vh; /* Adjust vertical position */
  left: 50%; /* Move left edge to center */
  transform: translateX(
    -50%
  ); /* Shift back by half its width to truly center */
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10px 20px 20px 20px;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10px; /* Add some rounded corners for better appearance */
  backdrop-filter: blur(20px);
}

.login-panel-text {
  color: white;
  font-size: 16px;
  margin-bottom: 15px;
}

.login-panel-buttons {
  display: flex;
  justify-content: center;
  width: 90%;
  gap: 10px;
}

.login-btn,
.skip-btn {
  margin: 0 10px;
  padding: 8px 16px;
  border-radius: 5px;
  border: none;
  font-size: 14px;
  cursor: pointer;
}

.login-btn {
  background-color: #07c160;
  /* WeChat Green */
  color: white;
}

.skip-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
}
