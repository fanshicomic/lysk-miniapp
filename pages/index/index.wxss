/**index.wxss**/

#hr-section {
    text-align: right;
}

#title {
    text-align: center;
    color: white;
    margin-top: 17vh;
    font-size: 30px;
    padding: 10px;
}

#sub-title {
    width: 100%;
    color: white;
    font-size: x-small;
    opacity: .25;
}

.button-section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 7vh;
    width: 100%;
}

.btn {
    height: 12vh;
    width: 100%;
}

.hologram-text {
    top: 30%;
}

.hologram-orbit {
    right: -70%;
    top: 30%;
}

.hologram-championships {
    right: -60%;
    top: 30%;
}

.icon {
    width: 16vh;
    height: 16vh;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0.8;
}

.announcement-button {
    position: absolute;
    top: 13vh;
    right: 4vh;
    background-color: rgba(255, 255, 255, 0.1);
    height: 30px;
    width: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.megaphone {
    width: 15px;
    height: 15px;
    background-image: url("data:image/svg+xml;base64,");
    background-repeat: no-repeat;
    background-size: contain;
}

/* Login Panel Styles */
.login-panel {
    width: 60vw; /* Set a specific width */
    position: absolute;
    top: 40vh; /* Adjust vertical position */
    left: 50%; /* Move left edge to center */
    transform: translateX(-50%); /* Shift back by half its width to truly center */
    background-color: rgba(0, 0, 0, 0.8);
    padding: 20px;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px; /* Add some rounded corners for better appearance */
}

.login-panel-text {
    color: white;
    font-size: 16px;
    margin-bottom: 15px;
}

.login-panel-buttons {
    display: flex;
    justify-content: center;
    width: 100%;
}

.login-btn,
.skip-btn {
    margin: 0 10px;
    padding: 8px 16px;
    border-radius: 5px;
    border: none;
    font-size: 14px;
    cursor: pointer;
}

.login-btn {
    background-color: #07c160;
    /* WeChat Green */
    color: white;
}

.skip-btn {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}