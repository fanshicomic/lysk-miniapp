.h1 {
  text-align: left;
  margin: 32px 0 16px 0;
}

.h2 {
  text-align: left;
  margin: 32px 0 8px 0;
}

.main-content {
  overflow: scroll;
  scrollbar-width: none;
}
.main-content::-webkit-scrollbar {
  display: none; /* Chrome/Safari */
}

.content-wrapper {
  margin-bottom: 100px;
}

.btn {
  text-align: center;
  background: rgba(255, 255, 255, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  color: rgba(255, 255, 255, 0.6);
  font-size: 0.95rem;
  padding: 8px;
}

.form-control::placeholder {
  color: #aaa;
}

.row {
  padding: 5px 20px 5px 20px;
  --bs-gutter-x: 0;
}

.form-control:focus {
  background-color: rgba(255, 255, 255, 0.15);
  color: rgba(255, 255, 255, 0.6);
}

.wx-1 {
  margin-right: 0.25rem;
  margin-left: 0.25rem;
}

.ocr-action-btn {
  border: 0;
  background-color: cornflowerblue;
}
.ocr-action-btn:hover,
.ocr-action-btn:focus {
  background-color: cornflowerblue;
  color: inherit;
}

.submit-btn {
  border: 0;
  background-color: palevioletred;
}
.submit-btn:hover,
.submit-btn:focus {
  background-color: palevioletred;
  color: inherit;
}



.button-row {
  margin-top: 20px;
}

.analyze-results {
  margin-top: 15px;
  border: 1px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border-radius: 5px;
  padding: 10px;
}

.sub-title-row {
  display: flex;
  align-items: flex-end;
}

.info {
  margin-bottom: 9px;
  margin-left: 8px;
}

.cp-text-label {
  font-size: 12px;
}

.cp-number-label {
  font-size: 24px;
  font-weight: 500;
}

.record-cp-bar {
  height: 16px;
}

.percentage-row {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  justify-content: left;
  gap: 10px;
}

.h2 {
  margin-top: 10px;
  margin-bottom: 5px;
}
