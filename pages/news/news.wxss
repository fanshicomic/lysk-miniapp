/* pages/news/news.wxss */
@import "/styles/fancy-card.wxss";
page {
  height: 100vh;
  color: white;
  background: linear-gradient(0deg, #23314c, #45324c);
  overflow: hidden;
}

.main-content {
    overflow: scroll;
    scrollbar-width: none;
}
.page-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  box-sizing: border-box;
}

.report-page {
  top: 7vh;
  width: 80vw;
  height: 60vh;
  /* background-color: rgb(239 235 222); */
  /* background: linear-gradient(0deg, #f5ebdd, #f1dace); */
  background: linear-gradient(0deg, #38323c, #131214);
  /* border: 1px solid #ccc; */
  padding: 20px;
  position: relative;
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.6);
  box-sizing: border-box;
  /* color: black; */
  color: #ffffffde;
  /* font-family: 'Courier New', Courier, monospace; */
  /* font-family: "Dancing Script", cursive; */
  overflow-y: auto;
}

.report-page::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  border-width: 0 40px 40px 0;
  border-style: solid;
  /* border-color: #e4dad4 rgb(255, 255, 255); */
  border-color: #38323c #ffffff;
  box-shadow: -1px 1px 2px rgba(0,0,0,0.1);
}

.title-image {
  position: absolute;
  width: 200px;
  height: 200px;
  opacity: 0.05;
  right: 0px;
  top: 40px;
}

.h1 {
  text-align: left;
  margin: 32px 0 8px 0;
}

.sub-text {
  font-size: 12px;
}

.date-icon {
  margin-top: 4px;
  margin-right: 5px;
}

.date {
  font-weight: bold;
  /* color:#554e42; */
}

.hr {
  background-color: #554e42;
}

.top-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-container {
  flex: 1 0 auto;
  align-items: center;
  width: 100%;
  margin-top: 10vh;
}

.character {
  margin-top: 30px;
  display: flex;
  width: 100%;
}

.speech-bubble {
  position: relative;
  background-color: #ffffffde;
  color: #131214;
  padding: 10px;
  border-radius: 10px;
  margin-left: 20px;
  width: 40%;
}

.speech-bubble::before {
  content: '';
  position: absolute;
  top: 50%;
  left: -10px;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 10px solid transparent;
  border-bottom: 10px solid transparent;
  border-right: 10px solid #ffffffde;
}

.character-image {
  width: 100%;
  height: 100%;
  transform: rotate(-10deg);
}

.character-image-container {
  position: relative;
  width: 100px;
  height: 100px;
  /* transform: rotate(-10deg); */
}
.corner {
  position: absolute;
  width: 15px;
  height: 15px;
  border-color: #ffffffa1;
  border-style: solid;
}
.corner-tl {
  top: 0;
  left: 0;
  border-width: 3px 0 0 3px;
  border-top-left-radius: 10px;
}
.corner-tr {
  top: 0;
  right: 0;
  border-width: 3px 3px 0 0;
  border-top-right-radius: 10px;
}
.corner-bl {
  bottom: 0;
  left: 0;
  border-width: 0 0 3px 3px;
  border-bottom-left-radius: 10px;
}
.corner-br {
  bottom: 0;
  right: 0;
  border-width: 0 3px 3px 0;
  border-bottom-right-radius: 10px;
}

.top-list {
  margin-top: 10px;
}

.top-list-item {
  font-size: 14px;
  padding: 2px 0;
}

.top-one {
  font-size: 24px;
  font-weight: bold;
}

footer {
  position: fixed !important;
}