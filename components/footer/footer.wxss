.footer {
    background: rgba(50, 39, 68, 0.4);
    color: white;
    text-align: right;
    font-size: 12px;
    z-index: 100;
    align-items: center;
    padding: 0;
    justify-content: center;
    height: 5vh;
    display: flex;
    flex-direction: column;
    /* backdrop-filter: blur(20px); */
}

:host {
    bottom: 0;
    width: 100%;
    position: initial;
}

.link {
    color: #64afff;
    text-decoration: underline;
    cursor: pointer;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.modal-content {
    display: flex;
    flex-direction: column;
    background-color: rgb(0, 0, 0);
    padding: 40rpx;
    border-radius: 10rpx;
    text-align: center;
}

.modal-content image {
    width: 400rpx;
    height: 400rpx;
    margin-bottom: 20rpx;
}