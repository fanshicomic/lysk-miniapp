.container {
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  color: rgba(255, 255, 255, 0.8);
  padding: 16px;
  box-sizing: border-box;
  font-size: 14px;
}

.suggestion-container {
    display: flex;
    flex-direction: column;
}

.hr {
  height: 1px;
  background: rgb(255, 255, 255);
  margin: 16px 0;
  border: 0;
  opacity: 0.25;
}

.h2 {
    text-align: left;
    margin: 0px 0 10px 0;
    font-size: 16px;
    font-weight: bold;
    line-height: 1;
    display: block;
}

.row {
  display: flex;
  flex-direction: row;
  gap: 5px;
  text-align: center;
}

.w-25 {
  box-sizing: border-box;
  width: 25%;
  padding: 0 5px 5px 0;
}

.w-33 {
  box-sizing: border-box;
  width: 33.3%;
  /* padding: 0 5px 5px 0; */
}

.w-50 {
  box-sizing: border-box;
  width: 50%;
  padding-right: 10px;
}

.w-100 {
  box-sizing: border-box;
  width: 100% !important;
  padding: 0 5px 0 0;
}

.combi-section {
  margin-top: 5px;
}

.percentage-label {
  text-align: right;
}