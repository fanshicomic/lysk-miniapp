<view class="panel-inputs">
    <view class="display-row">
        <view class="w-50">
            <input value="{{inputValues['hp']}}" placeholder="生命" type="digit" id="input-hp" class="form-control" data-key="hp" bindinput="onInput" />
        </view>
        <view class="w-50">
            <input value="{{inputValues['attack']}}" placeholder="攻击" type="digit" id="input-attack" class="form-control" data-key="attack" bindinput="onInput" />
        </view>
    </view>
    <view class="display-row">
        <view class="w-50">
            <input value="{{inputValues['defence']}}" placeholder="防御" type="digit" id="input-defence" class="form-control" data-key="defence" bindinput="onInput" />
        </view>
        <view class="w-50">
            <input value="{{inputValues['crit-rate']}}" placeholder="暴击" type="digit" id="input-crit-rate" class="form-control" data-key="crit-rate" bindinput="onInput" />
        </view>
    </view>
    <view class="display-row">
        <view class="w-50">
            <input value="{{inputValues['crit-dmg']}}" placeholder="暴伤" type="digit" id="input-crit-dmg" class="form-control" data-key="defence" bindinput="onInput" />
        </view>
        <view class="w-50">
            <input value="{{inputValues['oath-boost']}}" placeholder="誓约增伤" type="digit" id="input-oath-boost" class="form-control" data-key="oath-boost" bindinput="onInput" />
        </view>
    </view>
    <view class="display-row">
        <view class="w-50">
            <input value="{{inputValues['oath-regen']}}" placeholder="誓约回能" type="digit" id="input-oath-regen" class="form-control" data-key="oath-regen" bindinput="onInput" />
        </view>
        <view class="w-50">
            <input value="{{inputValues['crit-rate']}}" placeholder="加速回能" type="digit" id="input-energy-regen" class="form-control" data-key="energy-regen" bindinput="onInput" />
        </view>
    </view>
    <view class="display-row">
        <view class="w-50">
            <input value="{{inputValues['weaken-boost']}}" placeholder="虚弱增伤" type="digit" id="input-weaken-boost" class="form-control" data-key="weaken-boost" bindinput="onInput" />
        </view>
        <view class="w-50">
            <custom-select options="{{getMatchingOptions}}" title="对谱" selected="{{inputValues['matching']}}"></custom-select>
        </view>
    </view>
    <view class="display-row">
        <view class="w-50">
            <custom-select options="{{getMatchingBufferOptions}}" title="对谱加成" selected="{{inputValues['matching-buffer']}}"></custom-select>
        </view>
        <view class="w-50">
            <custom-select options="{{getPartnerOptions}}" title="搭档" selected="{{selectedPartner}}" bind:select="onPartnerChange"></custom-select>
        </view>
    </view>
    <view class="display-row">
        <view class="w-50">
            <custom-select options="{{getPartnerIdentityOptions}}" title="搭档身份" selected="{{inputValues['partner-identity']}}"></custom-select>
        </view>
        <view class="w-50">
            <custom-select options="{{getSunCardOptions}}" title="日卡" selected="{{inputValues['sun-card']}}"></custom-select>
        </view>
    </view>
    <view class="display-row">
        <view class="w-50">
            <custom-select options="{{getStageOptions}}" title="阶数" selected="{{inputValues['stage']}}"></custom-select>
        </view>
        <view class="w-50">
            <custom-select options="{{getWeaponOptions}}" title="武器" selected="{{inputValues['weapon']}}"></custom-select>
        </view>
    </view>
</view>