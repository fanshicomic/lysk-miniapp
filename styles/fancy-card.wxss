:host {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.box {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin: 80rpx 60rpx; */
  transition: 0.5s;
}

.bg-before {
  content: ' ';
  position: absolute;
  /* top: 0; */
  background: #fff;
  border-radius: 16rpx;
  transition: 0.5s;
  transform: skewX(0deg);
  /* left: 40rpx; */
  width: calc(100% - 180rpx);
  height: 110%;
}

.bg-after {
  content: '';
  position: absolute;
  /* top: 0; */
  background: #fff;
  border-radius: 16rpx;
  transition: 0.5s;
  filter: blur(60rpx);
  transform: skewX(0deg);
  /* left: 40rpx; */
  width: calc(100% - 180rpx);
  height: 110%;
}

.gradient-one .bg-before,
.gradient-one .bg-after {
  background: linear-gradient(315deg, #ffbc00, #ff0058);
}
.gradient-two .bg-before,
.gradient-two .bg-after {
  background: linear-gradient(315deg, #03a9f4, #ff0058);
}
.gradient-three .bg-before,
.gradient-three .bg-after {
  background: linear-gradient(315deg, #4dff03, #00d0ff);
}

.span-effects {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5;
  pointer-events: none;
}

